<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jokin.cbarrage.MainActivity">

    <com.jokin.cbarrage.cbarrage.CBarrageView
        android:id="@+id/barrageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

    </com.jokin.cbarrage.cbarrage.CBarrageView>

    <LinearLayout
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/addBtn"
            android:text="Add a Text Barrage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/addPriorityBtn"
            android:text="Add a Priority Text Barrage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/addImageBtn"
            android:text="Add a Image Barrage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/addByTimerBtn"
            android:text="Add Image Barrage By Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>    </LinearLayout>
</FrameLayout>
